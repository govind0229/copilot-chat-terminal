{
  "name": "terminal",
  "displayName": "Copilot Chat Terminal",
  "description": "copilot terminal in-chat",
  "version": "0.0.1",
  "publisher": "govind0229",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-terminal-in-chat.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "copilot-terminal-in-chat.makeDefault",
        "title": "Make Terminal Default for Copilot Chat"
      }
    ],
    "chatParticipants": [
      {
        "id": "terminal-chat.terminal",
        "name": "terminal",
        "description": "Execute terminal commands directly in Copilot Chat.",
        "isSticky": true
      },
      {
        "id": "terminal-chat.default",
        "name": "terminal-default",
        "description": "Auto-detects and executes terminal commands."
      }
    ],
    "configuration": {
      "title": "Copilot Chat Terminal",
      "properties": {
        "terminal.defaultChatBehavior": {
          "type": "boolean",
          "default": true,
          "description": "Make terminal execution the default behavior in Copilot Chat"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
